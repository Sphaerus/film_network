%h3= "People"

%p= link_to "Add new person", new_person_path if policy(Person).new? && @user.nil?
= will_paginate @people
%table.table.table-striped
	%tbody
		%th= "ID"
		%th= "Name"
		%th
		- @people.each do |person|
			%tr
				%td= person.id
				%td= link_to person.name, person_path(person)
				-if policy(person).edit?
					%td
						= link_to "Edit", edit_person_path(person), class: "btn btn-primary"
						= link_to "Delete", person_path(person), method: :delete, class: "btn btn-danger"		
= will_paginate @people						