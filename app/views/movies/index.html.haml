%h3= "Movies"

%p= link_to "Add new movie", new_movie_path
= will_paginate @movies		
%table.table.table-striped
	%tbody
		%th= "ID"
		%th= "Title"
		%th
		- @movies.each do |movie|
			%tr
				%td= movie.id
				%td= link_to movie.title, movie_path(movie)
				- if policy(movie).edit?
					%td
						= link_to "Edit", edit_movie_path(movie), class: "btn btn-primary"
						= link_to "Delete", movie_path(movie), method: :delete, class: "btn btn-danger"
= will_paginate @movies			